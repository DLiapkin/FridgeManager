@model FridgeManager.Models.ViewModels.CreateFridgeProductViewModel

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create</h1>

<h4>Fridge product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProduct" asp-roure-id="@Model.FridgeId">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <select asp-for=FridgeProduct.ProductName>
                    @foreach (var item in Model.Products)
                    {
                        <option>@item.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.FridgeProduct.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.FridgeProduct.Quantity" class="control-label"></label>
                <input asp-for="@Model.FridgeProduct.Quantity" class="form-control" />
                <span asp-validation-for="@Model.FridgeProduct.Quantity" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div class="col-md-2">
                    <a class="btn btn-secondary" asp-action="Index" asp-route-id="@Model.FridgeId">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>
